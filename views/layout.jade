doctype html
html(lang='es')
- selected= selected
- language= language
head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(charset='utf-8')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript', src='/javascripts/jquery-2.2.3.min.js')
    script(type='text/javascript', src='/javascripts/bootstrap.js')
    script(type='text/javascript', src='/lib/jquery.bxslider.min.js')
    link(rel='stylesheet', type='text/css', href='/lib/jquery.bxslider.css')
    link(href='https://fonts.googleapis.com/css?family=Work+Sans', rel='stylesheet', type='text/css')
    link(rel='icon', href='/images/favicon.png')
    title= title
body
  block header
    .page-header.text-center
      if language === 'spanish'
        a(href='/')
          img#imageTitle.img-responsive.center-block(src='images/titleImage.png', title='Principal', alt='Logo')
      else
        a(href='/indexEn')
          img#imageTitle.img-responsive.center-block(src='images/titleImage.png', title='Principal', alt='Logo')
      .container(style='padding: 25px 0px 10px 0px;')
        // Big navbar
        .btn-toolbar.pull-right.hidden-xs(role='toolbar', aria-label='...')
          .btn-group.noSpace(role='group', aria-label='...')
            if selected === 'index'
              if language === 'spanish'
                a.btn.btn-info.normalBorder(type='button', href='/') Principal
              else
                a.btn.btn-info.normalBorder(type='button', href='/indexEn') Main
            else
              if language === 'spanish'
                a.btn.btn-primary.normalBorder(type='button', href='/') Principal
              else
                a.btn.btn-primary.normalBorder(type='button', href='/indexEn') Main
            if selected === 'projects'
              if language === 'spanish'
                a.btn.btn-info.normalBorder(type='button', href='/projects') Proyectos
              else
                a.btn.btn-info.normalBorder(type='button', href='/projectsEn') Projects
            else 
              if language === 'spanish'
                a.btn.btn-primary.normalBorder(type='button', href='/projects') Proyectos
              else
                a.btn.btn-primary.normalBorder(type='button', href='/projectsEn') Projects
            if selected === 'aboutUs'
              if language === 'spanish'
                a.btn.btn-info.normalBorder(type='button', href='/aboutUs') Nosotros
              else
                a.btn.btn-info.normalBorder(type='button', href='/aboutUsEn') About Us
            else
              if language === 'spanish'
                a.btn.btn-primary.normalBorder(type='button', href='/aboutUs') Nosotros
              else
                a.btn.btn-primary.normalBorder(type='button', href='/aboutUsEn') About Us
            if selected === 'contact'
              if language === 'spanish'
                a.btn.btn-info.normalBorder(type='button', href='/contact') Contacta
              else
                a.btn.btn-info.normalBorder(type='button', href='/contactEn') Contact Us
            else
              if language === 'spanish'
                a.btn.btn-primary.normalBorder(type='button', href='/contact') Contacta
              else
                a.btn.btn-primary.normalBorder(type='button', href='/contactEn') Contact Us
            if selected === 'feedback'
              if language === 'spanish'
                a.btn.btn-info.normalBorder(type='button', href='/feedback') Opinión
              else
                a.btn.btn-info.normalBorder(type='button', href='/feedbackEn') Feedback
            else
              if language === 'spanish'
                a.btn.btn-primary.normalBorder(type='button', href='/feedback') Opinión
              else
                a.btn.btn-primary.normalBorder(type='button', href='/feedbackEn') Feedback
          .btn-group.noSpace(role='group', aria-label='...')
            if language === 'spanish'
              a.btn.btn-default.normalBorder(type='button', href='/' + selected + 'En') English
            else
              a.btn.btn-default.normalBorder(type='button', href='/' + selected) Español
      // Small navbar
      .container(style='padding-bottom: 10px;')
        .dropdown
          .button-group.visible-xs.pull-right(role='group')
            button#dropdownMenu1.btn.btn-primary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              | Menú
              span.caret
            ul.dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenu1', style='padding-top: 10px;')
              li
                a.normalBorder(href='/') Principal
              li
                a.normalBorder(href='/projects') Proyectos
              li
                a.normalBorder(href='about.html') Nosotros
              li
                a.normalBorder(href='contact.html') Contacta
              li
                a.normalBorder(href='feedback.html') Opinión
              li.dropdown-header Idioma/Language
              li
                a.normalBorder(href='/') English
      // End of navbar

  block content
    h1 Hi there Layout

